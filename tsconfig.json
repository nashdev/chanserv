{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "types": ["reflect-metadata", "jest"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "lib": ["es6", "dom", "es7"]
  },
  "include": ["src/**/*"]
}
